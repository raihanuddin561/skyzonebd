# Database
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN="vercel_blob_token_here"
# Alternative env var name (Vercel auto-generates this)
SKY_ZONE_BD_BLOB_READ_WRITE_TOKEN="vercel_blob_token_here"

# JWT Secret (Generate a strong random string)
JWT_SECRET="your-secret-key-here"

# Migration Secret (for /api/migrate endpoint)
MIGRATION_SECRET_KEY="your-migration-secret-key-here"

# Seed Secret (for /api/seed endpoint - prevents unauthorized seeding)
SEED_SECRET="your-seed-secret-key-here"

# Next.js
NEXT_PUBLIC_API_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NODE_ENV="development"

# Email Service (Resend - recommended)
# Get your API key from: https://resend.com
RESEND_API_KEY="re_your_api_key_here"

# Optional: Use API vs Mock Data
NEXT_PUBLIC_USE_API="true"
NEXT_PUBLIC_API_BASE_URL="http://localhost:3000"

# Production Settings (Update for deployment)
# DATABASE_URL="postgresql://user:password@production-host:5432/production-db?schema=public"
# NEXT_PUBLIC_API_URL="https://yourdomain.com"
# NEXT_PUBLIC_SITE_URL="https://yourdomain.com"
# NODE_ENV="production"

